{{!
    @template mod_mosaic/board

    Mosaic board template.

    Context variables required for this template:
    * boardid - The board ID
    * config - JSON configuration

    Example context (json):
    {
        "boardid": 1,
        "config": "{}"
    }
}}
<div id="mosaic-board-app" class="mosaic-board-container" data-boardid="{{boardid}}" data-config="{{{config}}}">
    <div class="mosaic-loading">
        <div class="spinner-border" role="status">
            <span class="sr-only">{{#str}}loading{{/str}}</span>
        </div>
    </div>
</div>
